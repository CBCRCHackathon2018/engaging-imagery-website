head
  title=title
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=no')
  link(rel='stylesheet' href='css/main.css')
  noscript
    link(rel='stylesheet' href='css/noscript.css')
// Wrapper
#wrapper
  // Header
  header#header.alt
    a.logo(href='index.html')
      span .
      strong CBC Radio Canada
      span .
  // Banner
  section#banner.major
    .inner
      header.major
        h1 CBC Radio - Shows
      .content
        p
          | CBC radio shows - Canada's home for news, sports, 
          br
          | lifestyle, comedy, arts, kids, music, original series & more.
  // Main
  #main
    // One
    section#one.tiles
      each val in data
        article
          span.image
            img(src=val.image alt='')
          header.major
            h3
              a.link(href='landing.html')= val.title
            p= val.description
      else 
        p hi 
  // Footer
  footer#footer
    .footerBody.extendedFooter
      .footerColumn.connect
        h3.footerHeading Connect with CBC
        ul.footerList
          li.footerItem
            a.footerLink(href='https://www.facebook.com/cbc/') Facebook
          li.footerItem
            a.footerLink(href='https://twitter.com/cbc/') Twitter
          li.footerItem
            a.footerLink(href='https://www.youtube.com/user/CBCtv') YouTube
          li.footerItem
            a.footerLink(href='https://www.instagram.com/cbc/?hl=en') Instagram
          li.footerItem
            a.footerLink(href='https://cbchelp.cbc.ca/hc/en-ca/categories/115000249853-Help-with-CBC-Apps') Mobile
          li.footerItem
            a.footerLink(href='https://www.cbc.ca/rss/') RSS
          li.footerItem
            a.footerLink(href='/radio/podcasts') Podcasts
          li.footerItem
            a.footerLink(href='https://subscriptions.cbc.ca/listmanagement/') Newsletters
      .footerColumn.contact
        h3.footerHeading Contact CBC
        p
          | Audience Relations, CBC 
          br
          | P.O. Box 500 Station A 
          br
          | Toronto, ON 
          br
          |  Canada, M5W 1E6
        p
          | Toll-free (Canada only): 
          br
          |  1-866-306-4636
        p
          | TTY/Teletype writer: 
          br
          |  1-866-220-6045
        ul.footerList
          li.footerItem
            a.footerLink(href='https://cbchelp.cbc.ca/') FAQ
          li.footerItem
            a.footerLink(href='https://cbchelp.cbc.ca/hc/en-ca') Help Centre
          li.footerItem
            a.footerLink(href='https://cbchelp.cbc.ca/hc/en-ca/requests/new') Contact Us
      .footerColumn.connect(data-test-id='footer-column-service')
        h3.footerHeading Services &amp; Info
        ul.footerList
          li.footerItem
            a.footerLink(href='http://www.cbc.radio-canada.ca/en') Corporate Info
          li.footerItem
            a.footerLink(href='http://www.ombudsman.cbc.radio-canada.ca/en/') Ombudsman
          li.footerItem
            a.footerLink(href='https://www.cbc.ca/appearances/') Public Appearances
          li.footerItem
            a.footerLink(href='http://www.cbc.radio-canada.ca/en/commercial-services/') Commercial Services
